<%= render :partial => 'spree/admin/shared/spree_jobs_side_menu' %>

<% content_for :page_title do %>
  <%= t(:job_locations) %>
<% end %>

<% unless @job_locations.any? %>
  <div class="no-objects-found">
    <%= t(:no_results) %>
  </div>
<% else %>
  <table class="index">
    <thead>
      <tr>
          <th>Address</th>
          <th>City</th>
          <th>Country</th>
          <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @job_locations.each do |location| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td>
          <%= location.address %>
        </td>
        <td>
          <%= location.city %>
        </td>
        <td>
          <%= location.country.name %>
        </td>
        <td class="actions">
            <%= link_to_edit location, no_text: true %>
            <%= link_to_delete location, :no_text => true %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
