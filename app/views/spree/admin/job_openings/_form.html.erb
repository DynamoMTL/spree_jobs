<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @job_opening } %>

<fieldset id="general_fields">
  <legend><%= t(:general) %></legend>
  <%= f.field_container :title do %>
    <%= f.label :title %><br />
    <%= f.text_field :title, class: 'fullwidth title' %>
  <% end %>

  <%= f.field_container :description do %>
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'fullwidth' %>
  <% end %>

  <%= f.field_container :requirements do %>
    <%= f.label :requirements %><br />
    <%= f.text_area :requirements, class: 'fullwidth' %>
  <% end %>

  <%= f.collection_select :job_location_id, ::Spree::JobLocation.order('address asc').all, :id, :name, {}, { class: "select2 fullwidth"}  %>

  <%= f.field_container :external_application_url do %>
    <%= f.label :external_application_url %><br />
    <%= f.text_field :external_application_url, class: 'fullwidth title' %>
  <% end %>

  <%= f.field_container :active, :class => ['checkbox'] do %>
      <label>
        <%= f.check_box :active %>
        <%= t(:active) %>
      </label>
  <% end %>

</fieldset>